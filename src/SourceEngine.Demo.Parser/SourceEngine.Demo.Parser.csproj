
<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>netstandard2.1</TargetFramework>
        <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
        <SignAssembly>true</SignAssembly>
        <AssemblyOriginatorKeyFile>..\key.snk</AssemblyOriginatorKeyFile>
        <DelaySign>true</DelaySign>
        <Configurations>Debug;Release;Bitstream-Debugging;YoloDebug;SavePropValues</Configurations>
        <Platforms>AnyCPU</Platforms>
    </PropertyGroup>

    <PropertyGroup>
        <AssemblyTitle>SourceEngine.Demo.Parser</AssemblyTitle>
        <Company>Source Engine Discord</Company>
        <Copyright>Copyright © 2014 EHVAG, 2019 Source Engine Discord and contributors</Copyright>
        <Description>A library for parsing Counter-Strike: Global Offensive demos.</Description>
        <Product>SourceEngine.Demo.Parser</Product>
        <VersionPrefix>2.0.0</VersionPrefix>
    </PropertyGroup>

    <PropertyGroup>
        <Authors>source-engine-discord;main</Authors>
        <Title>SourceEngine.Demo.Parser</Title>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <PackageProjectUrl>https://discord.gg/SourceEngine</PackageProjectUrl>
        <PackageTags>source engine;demo;csgo;counter-strike;parser</PackageTags>
        <RepositoryType>git</RepositoryType>
        <RepositoryUrl>https://github.com/source-engine-discord/SourceEngine.Demo.Parser</RepositoryUrl>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(Configuration)' == 'Release' ">
      <DefineConstants>TRACE;YOLO</DefineConstants>
      <DocumentationFile>bin\Release\DemoInfo.xml</DocumentationFile>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(Configuration)' == 'Bitstream-Debugging' ">
      <OutputPath>bin\Debug\</OutputPath>
      <DefineConstants>DEBUG;TRACE;BITSTREAMDEBUG</DefineConstants>
      <DebugSymbols>true</DebugSymbols>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(Configuration)' == 'YoloDebug' ">
      <OutputPath>bin\Release\</OutputPath>
      <DefineConstants>TRACE;YOLO;DEBUG</DefineConstants>
      <DebugSymbols>true</DebugSymbols>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(Configuration)' == 'SavePropValues' ">
      <OutputPath>bin\Debug\</OutputPath>
      <DefineConstants>TRACE;SAVE_PROP_VALUES</DefineConstants>
      <DebugSymbols>true</DebugSymbols>
    </PropertyGroup>

</Project>
